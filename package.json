{
  "name": "crimeledger-js",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite --port 5173 --strictPort",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/server.js",
    "dev:server": "nodemon server/server.js",
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "lint": "eslint . --ext js,jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "test": "jest",
    "contracts:compile": "hardhat compile",
    "contracts:deploy": "hardhat run scripts/deploy.js --network sepolia",
    "contracts:verify": "node scripts/verify-deployment.js",
    "deploy": "npm run build && npm run contracts:deploy",
    "deploy:check": "node scripts/deployment-checklist.js",
    "deploy:full": "npm run deploy:check && npm run build && npm run contracts:compile && npm run contracts:deploy",
    "deploy:local": "npm install && cd server && npm install && cd .. && npm run contracts:compile && npm start",
    "deploy:setup": "node scripts/deploy-setup.js",
    "deploy:integration-test": "node scripts/test-integration.js"
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "mongoose": "^6.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.4.5"
  },
  "description": "JavaScript version of CrimeLedger App"
}
